    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <style>
        .has-error {
            color: #c30808;
            font-weight: 500;
        }

        #CaptchaImage {
            width: 157px;
        }
    </style>
</head>
<body class="loginbg">
    <br /><br />
    <!------ Include the above in your HEAD tag ---------->
    <div class="container col-md-4 text-center login1 shadow bg-white rounded">
        <h3 class="m-0"><img src="~/images/logo.png" alt="Logo" /></h3>
        <h3 class="text-primary mb-2"><strong>Login To KYC</strong></h3>
        @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input-group col-md-12 mb-2">
                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control", @placeholder = "Employee Code", required = "required" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="input-group col-md-12 mb-2">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", required = "required" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="input-group mt-2 justify-content-center" id="CaptchaDiv">
                <img src="@Url.Action("GenerateCaptcha","Login")" alt="qr code" id="CaptchaImage" width="60%" height="40" />
                <img src="~/images/Refresh.png" id="ReloadCaptcha" onclick="location.href='@Url.Action("Index","Login")'" alt="Reload" style="height:24px; margin:7px; cursor:pointer;" />
            </div>
            //onclick="location.href='@Url.Action("Index","Login")'"
            <div class="input-group col-md-12 mb-2 mt-3">
                <input type="text" class="form-control" name="CaptchaInput" />
            </div>
            <br />

            if (!string.IsNullOrEmpty(ViewBag.errorMessage))
            {
                <span class="has-error">@ViewBag.errorMessage</span>
                <br />
                <br />
            }
            <div class="col-md-12 mb-2">
                <input type="submit" value="Log in" name="Login" class="btn bg-dark text-white btn-block btn-flat" />
            </div>
        }
    </div>
</body>
</html>
