@{
    ViewBag.Title = "KYC Remediation CM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<style>
    label {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        text-align: center;
        width: 150px;
        line-height: 20px;
        margin-bottom: 10px;
    }

    .btn-primary {
        color: #fff;
        background-color: #383095;
        border-color: #383095;
    }
</style>
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="#">Search / Select Records - UFC/CM</a> </li>
    </ul>
    <hr class="m-0">
</div>

<br />
<div ng-app="myApp" ng-controller="KYCRemediationCM">
    <div class="container">
        <div class="panel panel-default">
            <div style="margin-left:20%">
                <form class="form-inline">
                    <div class="mx-sm-3 mb-4">
                        <label> Enter Search Criteria</label>
                        <input type="text" value="" class="form-control" ng-model="Search_Text" />
                    </div>
                    <div class="mx-sm-3 mb-4">
                        <label for="aum_range"> AUM Range </label>
                       
                        <select name="aum_range" ng-model="P_AUM_BRACKET" class="form-control">
                            <option value="" selected="selected"> All</option>
                            <option value="Less Than 1 L">Less Than 1 L</option>
                            <option value="Between 1L and 2L">Between 1L and 2L  </option>
                            <option value="Between 2L and 5L">Between 2L and 5L</option>
                            <option value="Between 5L and 10L">Between 5L and 10L</option>
                            <option value="Between 10L and 15L">Between 10L and 15L</option>
                            <option value="Between 15L and 20L">Between 15L and 20L</option>
                            <option value="Between 20L and 25L">Between 20L and 25L</option>
                            <option value="Between 25L and 1Cr">Between 25L and 1Cr</option>
                            <option value="More than 1 Cr">More than 1 Cr</option>

                        </select>
                    </div>
                    <div class="form-group mx-sm-3 mb-4">
                        <button type="submit" class="btn btn-primary mb-2" ng-click="GetGridRecord(Search_Text,P_AUM_BRACKET)">
                            <span ng-show="searchButtonText == 'Searching'">

                                <img style="width:20px;height:20px;" src="~/images/loader.gif" />
                            </span>
                            {{ searchButtonText }}
                        </button>
                    </div>
                    <div class="form-group mb-2">

                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr />

    <div ng-show="kyc_remediation_grid_data_cm.length>0">

        <div class="row">
            <div class="form-group col-md-3">

                <label>Employee </label>
                <select class="form-control" ng-model="EMPLOYEECODE" ng-options="item.Code as item.Name for item in employee_list"></select>
            </div>
            <div class="form-group col-md-2" style="margin-top:26px;">
                <button type="submit" class="btn btn-primary mb-2" ng-click="save(EMPLOYEECODE)" ng-hide="isAssignBtnHide">
                    <span ng-show="searchButtonText == 'Updating'">
                        <img style="width:20px;height:20px;" src="~/images/loader.gif" />
                    </span>
                    {{ updateButtonText }}
                </button>
            </div>
        </div>

    </div>


    <div style="overflow:auto">
        <table class="table table-hover table-bordered" id="table_id">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SR_NO</th>
                    <th>Select All<input type="checkbox" ng-model="SELECT_STATUS" ng-change="CheckboxActiity(0,SELECT_STATUS,1)"></th>
                    <th>ACNO</th>
                    <th>FIRST_HOLDER</th>
                    <th>ADDRESS</th>
                    <th>AUM RANGE</th>
                    <th>BANK_FLAG</th>
                    <th>KYC_FLAG</th>
                    <th>AADHARSEEDING_FLAG</th>
                    <th>NOMINEE_FLAG</th>
                    <th>ARN</th>


                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in kyc_remediation_grid_data_cm track by $index">
                    <td>{{$index+1}}</td>
                    <td><input type="checkbox" ng-checked="item.SELECT_STATUS" ng-model="item.SELECT_STATUS" ng-change="CheckboxActiity($index,item.SELECT_STATUS,0)" /></td>
                    <td>{{item.ACNO}}</td>
                    <td>{{item.INVNAME}}</td>
                    <td>{{item.ADDRESS_OF_FIRST_HOLDER}}</td>
                    <td>{{item.AUM_BRACKET}}</td>
                    <td>{{item.BANK_FLAG}}</td>
                    <td>{{item.KYCFLAG}}</td>
                    <td>{{item.AADHARSEEDINGFLAG}}</td>
                    <td>{{item.NOMINEEFLAG}}</td>
                    <td>{{item.ARN_CODE}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
