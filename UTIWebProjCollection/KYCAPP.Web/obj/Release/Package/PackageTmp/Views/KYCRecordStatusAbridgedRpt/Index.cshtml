<script>
    $(document).ready(function () {


        $('#bank_flag').multiselect({
            search: true,
            selectAll: true
        });
        $('#aum_br').multiselect({
            search: true,
            selectAll: true
        });
        $('#aadhar_flag').multiselect({
            search: true,
            selectAll: true
        });
        $('#folio_status').multiselect({
            search: true,
            selectAll: true
        });

    });
    $('#select-all').on('click', function (e) {
        if ($(this).is(':checked', true)) {
            $(".sub_chk").prop('checked', true);
        }
        else {
            $(".sub_chk").prop('checked', false);
        }
    });
</script>