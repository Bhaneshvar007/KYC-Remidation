            </thead>
            <tbody>
                <tr ng-repeat="item in KYCRecordStatusAbridgedReport_Data track by $index">
                    <td>{{$index+1}}</td>

                    <td><input type="checkbox" name="single_check" class="row-checkbox sub_chk" data-folio_no="{{item.ACNO}}" /></td>
                    @*<td><input type="checkbox" ng-checked="item.SELECT_STATUS" ng-model="item.SELECT_STATUS" ng-change="CheckboxActiity($index,item.SELECT_STATUS,0)" /></td>*@
                    <td>{{item.AUM_BRACKET}}</td>
