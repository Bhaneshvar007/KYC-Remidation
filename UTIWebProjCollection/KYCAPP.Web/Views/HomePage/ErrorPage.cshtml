@{
    ViewBag.Title = "ErrorPage";
    Layout = null;
}


<div style="display:flex; justify-content:center; align-items:center; height:100vh; background:#f5f7fb;">
    <div style="text-align:center; background:#fff; padding:40px 35px; border-radius:12px; width:100%; max-width:420px; box-shadow:0 10px 25px rgba(0,0,0,0.08);">

        <div style="font-size:48px; margin-bottom:10px;">⚠️</div>

        <h2 style="margin-bottom:10px;">Something Went Wrong</h2>

        <p style="color:#666; font-size:15px; margin-bottom:25px;">
            You are logged in with wrong credentials or your account is not authorized.<br />
            Please contact the administrator or try again.
        </p>

        <a href="@Url.Action("Logout", "Login")"
           style="display:inline-block; background:#4f46e5; color:#fff; padding:10px 24px; border-radius:8px; text-decoration:none;">
            Go to Home
        </a>

    </div>
</div>