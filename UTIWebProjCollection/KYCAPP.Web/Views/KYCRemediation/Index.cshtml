@{
    ViewBag.Title = "KYC Remediation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<style>
    label {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        text-align: center;
        width: 150px;
        line-height: 20px;
        margin-bottom: 10px;
    }

    .btn-primary {
        color: #fff;
        background-color: #383095;
        border-color: #383095;
    }
</style>
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="#">Search / Select Records - Self</a> </li>
    </ul>
    <hr class="m-0">
</div>

<br />
<div ng-app="myApp" ng-controller="KYCRemediation">
    <div class="container">
        <div class="panel panel-default">
            <div style="margin-left:20%">
                <form class="form-inline">
                    <div class="form-group mx-sm-3 mb-4">
                        <label> Enter Search Criteria</label>
                        <input type="text" class="form-control" ng-model="Search_Text" />
                    </div>
                    <div class="form-group mx-sm-3 mb-4">
                        <button type="submit" class="btn btn-primary mb-2" name="Search" ng-disabled="Search_Text===''" ng-click="GetGridRecord(Search_Text)">
                            <span ng-show="searchButtonText == 'Searching'">
                                <img style="width:20px;height:20px;" src="~/images/loader.gif" />
                            </span>
                            {{ searchButtonText }}
                        </button>
                    </div>
                    <div class="form-group mb-2">

                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />

    <button type="submit" class="btn btn-primary mb-2" name="Update" ng-click="save()" ng-show="kyc_remediation_grid_data.length>0">
        <span ng-show="searchButtonText == 'Updating'">
            <img style="width:20px;height:20px;" src="~/images/loader.gif" />
        </span>
        {{ updateButtonText }}
    </button>
    <div style="overflow:auto">
        <table class="table table-hover table-bordered" id="table_id">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SR_NO</th>

                    <th>Select All<input type="checkbox" ng-model="SELECT_STATUS" ng-change="CheckboxActiity(0,SELECT_STATUS,1)"></th>
                    <th>ACNO</th>
                    <th>FIRST_HOLDER</th>
                    <th>ADDRESS</th>
                    <th>AUM RANGE</th>
                    <th>BANK_FLAG</th>
                    <th>KYC_FLAG</th>
                    <th>AADHARSEEDING_FLAG</th>
                    <th>NOMINEE_FLAG</th>
                    <th>ARN</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in kyc_remediation_grid_data track by $index">
                    <td>{{$index+1}}</td>

                    <td><input type="checkbox" ng-checked="item.SELECT_STATUS" ng-model="item.SELECT_STATUS" ng-change="CheckboxActiity($index,item.SELECT_STATUS,0)" /></td>
                    <td>{{item.ACNO}}</td>
                    <td>{{item.INVNAME}}</td>
                    <td>{{item.ADDRESS_OF_FIRST_HOLDER}}</td>
                    <td>{{item.AUM_BRACKET}}</td>
                    <td>{{item.BANK_FLAG}}</td>
                    <td>{{item.KYCFLAG}}</td>
                    <td>{{item.AADHARSEEDINGFLAG}}</td>
                    <td>{{item.NOMINEEFLAG}}</td>
                    <td>{{item.ARN_CODE}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("input[name=all_check]").change(function () {

            if ($(this).is(":checked")) {
                $("input[name=single_check]").prop("checked", true);


            }
            else {
                $("input[name=single_check]").prop("checked", false);

            }

        });
    });
</script>