@{
    ViewBag.Title = "Summary Region/Zone wise Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<style>
    /* label {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        text-align: center;
        width: 150px;
        line-height: 20px;
        margin-bottom: 10px;
    }*/

    .btn-primary {
        color: #fff;
        background-color: #383095;
        border-color: #383095;
    }

    .btnSearch {
        margin-top: 35px;
        margin-left:50px;
    }
</style>
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="#">Summary Region/ Zone wise Report</a> </li>
    </ul>
    <hr class="m-0">
</div>

<br />
<div ng-app="myApp" ng-controller="summaryRegionZoneWise">
    <div class="container">

        <form>
            <div class="row">
                <div class="form-group col-sm-3">
                    <label>Zone</label>
                    <input type="text" class="form-control" ng-model="zone" />
                </div>
                <div class="form-group col-sm-3">
                    <label>Region</label>
                    <input type="text" class="form-control" ng-model="region" />
                </div>
                <div class="form-group col-sm-3">
                    <label>UFC</label>
                    <input type="text" class="form-control" ng-model="ufc" />
                </div>


                <div class="form-group col-sm-3">
                    <label>From Date</label>
                    <input type="date" class="form-control" ng-model="from_date" />
                </div>
                <div class="form-group col-sm-3">
                    <label>To Date</label>
                    <input type="date" class="form-control" ng-model="to_date" />
                </div>
                <div class="form-group btnSearch">
                    <button type="submit" class="btn btn-primary mb-2" ng-disabled="Search_Text===''" ng-click="GetGridRecord(zone,region,ufc,from_date,to_date)">
                        <span ng-show="searchButtonText == 'Searching'">
                            <img style="width:20px;height:20px;" src="~/images/loader.gif" />
                        </span>
                        {{ searchButtonText }}
                    </button>
                </div>
                <div class="form-group mb-2">

                </div>
            </div>
        </form>

    </div>
    <br />
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SR_NO</th>
                    <th>Zone</th>
                    <th>Region</th>
                    <th>Branch</th>
                    <th>Total Cases Accepted</th>
                    <th>Pending for Action</th>
                    <th>Not Actioned & Moved Back to Pool</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in summary_regionzone_grid_data track by $index">
                    <td>{{$index+1}}</td>
                    <td>{{item.ZONE}}</td>
                    <td>{{item.REGION}}</td>
                    <td>{{item.BRANCH}}</td>
                    <td>{{item.TOTAL_CASE_ACCEPTED}}</td>
                    <td>{{item.PENDING_FOR_ACTION}} </td>
                    <td>{{item.MOVED_TO_POOL}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
