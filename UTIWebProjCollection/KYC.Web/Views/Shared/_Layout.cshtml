@*@model IEnumerable<Cylsys.Common.MenusModel>*@
<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/bootstrap_working.min.css" rel="stylesheet" type="text/css" />*@

    <!-- <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
     <link href="~/Content/toaster.css" rel="stylesheet" />-->
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.css"> 
    @* @Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")
    @*<style>
            body{
                font-family: 'Montserrat', sans-serif;

            }
        </style>*@
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/Menu"><img src="~/images/logo_1.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                @{
                    List<Cylsys.Common.MenusModel> menus = Session["MenuList"] as List<Cylsys.Common.MenusModel>;
                    if (menus != null)
                    {
                        foreach (Cylsys.Common.MenusModel menu in menus)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Content(menu.Link)">@menu.Title</a>
                                @*<a class="nav-link" href=@Html.ActionLink(menu.Link, menu.Title)></a>*@
                            </li>
                        }
                    }
                }
                @*<li class="nav-item" ng-repeat="item in submenus">
                        <a class="nav-link" href={{item.Link}}>{{item.Title}}</a>
                    </li>*@
            </ul>




            <div id="myOverlay" class="overlay">
                <span class="closebtn" onclick="closeSearch()" title="Close Overlay">×</span>
                <div class="overlay-content">
                    <form action="/action_page.php">
                        <input type="text" placeholder="Search.." name="search">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
            <div class="form-inline my-2 my-lg-0">
                <a onclick="openSearch()"></a>
                <a data-toggle="collapse" role="button" aria-expanded="false" aria-controls="collapseExample"> </a>
               @* <a href="#" class="pmycollapse text-white">Login : @Session["LoggedInUser"].ToString()<i class="fa fa-user-circle text-light ml-2 mr-3"></i> </a>*@
            </div>
        </div>

        <div class="mycollapse" id="usersettings" style="display:none">
            <div class="card card-body topnotification">
                <p><i class="fa fa-user-circle-o"></i> <strong>User</strong></p>
                <hr>
                <span><i class="fa fa-cogs"></i><a href="/Menu"> Setting</a></span><br>
                @*<span><i class="fa fa-sign-in"></i><a href=""> Login</a></span><br>*@
                <span><i class="fa fa-sign-out"></i><a href="/Login/Logout"> Logout</a></span><br>
            </div>
        </div>
    </nav>
    <!--Header end-->
    <div class="container-fluid body-content">
        @RenderBody()

        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {

            //$("body").click(function () {
            //    if ($(this).hasClass("pmycollapse") == false) {
            //        $(".mycollapse").hide();
            //    }
            //});

            $(".pmycollapse").click(function () {
                debugger;
                var ishow = $(".mycollapse").css("display");
                if (ishow == "none") {
                    $(".mycollapse").show();
                }
                else {
                    $(".mycollapse").hide();
                }

            });
        });
    </script>
</body>
</html>
